<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

<TextView
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:text="Please enter your MAC address of your bluetooth modul to operate with your arduino:" />

<EditText
    android:id="@+id/mactxt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10" >

    <requestFocus android:layout_width="wrap_content" />

</EditText>

<Button
    android:id="@+id/btnSaveMAC"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="save" />

<RelativeLayout     android:layout_width="fill_parent"
    android:layout_height="wrap_content">

<TextView
    android:id="@+id/txtViewcurrentmac"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="current MAC address:" />

<TextView
    android:id="@+id/textViewMAC"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_toRightOf="@+id/txtViewcurrentmac" />

</RelativeLayout>
</LinearLayout>